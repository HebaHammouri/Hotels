<div class="jumbotron">
    <div class="container">
        <div class="row">
            <h4>Search a Hotel</h4>

            <form method="POST" action="https://hhammouri-hotels.herokuapp.com/hotel.php" enctype="multipart/form-data">
                <div class="form-group col-sm-12">
                    <label for="Destination">Destination City</label>
                    <input type="text" name="destination" id="destination" value="" class="form-control"/>
                </div>

                <div class="form-group col-sm-6">
                    <label for="start-date">Start Date</label>
                    <input type="date" name="start-date" id="start-date" value="{{ "now"|date_modify("+1 day")|date("Y-m-d") }}"
                           class="form-control"/>
                </div>

                <div class="form-group col-sm-6">
                    <label for="end-date">End Date</label>
                    <input type="date" name="end-date" id="end-date" value="{{ "now"|date_modify("+1 day")|date("Y-m-d") }}"
                           class="form-control"/>
                </div>

                <div class="form-group col-sm-6">
                    <label for="length-of-stay">Length of Stay</label>
                    <input type="text" name="length-of-stay" id="length-of-stay" value="" class="form-control"/>
                </div>

                <div class="form-group col-sm-6">
                    <label for="rate">Rate</label>
                    <select class="form-control" name="rate" id="rate">
                        {% for i in 1..5 %}
                            <option>{{ i }} & up</option>
                        {% endfor %}
                    </select>
                </div>

                <button id="search" type="submit" class="btn btn-success">Search</button>
            </form>

        </div>
    </div>
</div>