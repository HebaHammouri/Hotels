<div class="container">
    <div class="row">
        <h1>Hotels</h1>
        <div class="col-sm-9">
        {% for hotel in offers.Hotel %}
            <div class="well well-lg">
                <div class="row">
                    <div class="col-sm-3">
                        <img src="{{ hotel.hotelInfo.hotelImageUrl }}" alt="...">
                    </div>
                    <div class="col-sm-6">
                        {{ hotel.hotelInfo.hotelName }}
                        <span class="glyphicon glyphicon-star">
                            {{ hotel.hotelInfo.hotelStarRating|number_format }}/5
                        </span>
                        <p class="navbar-text">{{ hotel.destination.city }}, {{ hotel.destination.province }}</p>
                    </div>
                    <div class="col-sm-3">
                        <p class="navbar-text">
                            <strike>{{ hotel.hotelPricingInfo.originalPricePerNight }}{{ hotel.hotelPricingInfo.currency }}</strike> {{ hotel.hotelPricingInfo.totalPriceValue }}{{ hotel.hotelPricingInfo.currency }}
                            <i>Save Up To {{ hotel.hotelPricingInfo.percentSavings|number_format }} %</i></p>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</div>