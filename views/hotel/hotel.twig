<div class="container">
    <div class="row">
        <h1>Hotels</h1>
        {% for hotel in offers.Hotel %}
            <div class="well well-lg">
                <div class="row">
                    <div class="col-sm-8">
                        <p class="navbar-text">
                        <img src="{{ hotel.hotelInfo.hotelImageUrl }}" alt="...">
                        {{ hotel.hotelInfo.hotelName }}
                        <span class="glyphicon glyphicon-star">
                            {{ hotel.hotelInfo.hotelStarRating|number_format }}/5
                        </span>
                        {{ hotel.destination.city }}, {{ hotel.destination.province }}</p>
                    </div>
                    <div class="col-sm-4">
                        <p class="navbar-text">
                            <strike>{{ hotel.hotelPricingInfo.originalPricePerNight }}</strike>{{ hotel.hotelPricingInfo.totalPriceValue }} {{ hotel.hotelPricingInfo.currency }}
                            <i>Save Up To {{ hotel.hotelPricingInfo.percentSavings|number_format }} %</i></p>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>
</div>